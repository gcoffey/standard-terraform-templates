resource "azurerm_app_service_connection" "{{ app_service_connection.name }}" {
  ## Required Vars
  name   = "{{ app_service_connection.name }}"
  app_service_id   = "{{ app_service_connection.app_service_id }}"
  target_resource_id   = "{{ app_service_connection.target_resource_id }}"


  ## Blocks
  authentication {
    ## Required Block Vars
    type   = "{{ app_service_connection.authentication.type }}"
    ## Optional Block Vars
    name   = "{{ app_service_connection.authentication.name }}"
    secret   = "{{ app_service_connection.authentication.secret }}"
    client_id   = "{{ app_service_connection.authentication.client_id }}"
    subscription_id   = "{{ app_service_connection.authentication.subscription_id }}"
    principal_id   = "{{ app_service_connection.authentication.principal_id }}"
    certificate   = "{{ app_service_connection.authentication.certificate }}"
    client_type   = "{{ app_service_connection.authentication.client_type }}"
    vnet_solution   = "{{ app_service_connection.authentication.vnet_solution }}"
    secret_store {
      ## Required Block Vars
      key_vault_id   = "{{ app_service_connection.authentication.secret_store.key_vault_id }}"
 
    }
  }
}
