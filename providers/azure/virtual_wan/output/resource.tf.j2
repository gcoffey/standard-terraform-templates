resource "azurerm_virtual_wan" "{{ virtual_wan.name }}" {
  ## Required Vars
  name   = "{{ virtual_wan.name }}"
  resource_group_name   = "{{ virtual_wan.resource_group_name }}"
  location   = "{{ virtual_wan.location }}"

  ## Optional Vars
  disable_vpn_encryption   = {{ virtual_wan.disable_vpn_encryption }}
  allow_branch_to_branch_traffic   = {{ virtual_wan.allow_branch_to_branch_traffic }}
  office365_local_breakout_category   = "{{ virtual_wan.office365_local_breakout_category }}"
  type   = "{{ virtual_wan.type }}"
  tags   = "{{ virtual_wan.tags | to_json | safe }}"

}
